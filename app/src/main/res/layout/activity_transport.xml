<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/trans_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:id="@+id/search"
        android:background="@drawable/box2"
        android:padding="2dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/trans_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:textSize="15sp"
            android:background="@color/transparent"
            android:hint="Search Here"/>

        <ImageView
            android:id="@+id/trans_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/ic_search_black_24dp"/>

    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/trans_spinner"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:background="@drawable/spinnerbg"
        android:layout_below="@id/search"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:text="Select"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/trans_name"
        android:layout_below="@id/trans_spinner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:text="Order ID"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/trans_order"
        android:layout_below="@id/trans_name" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:text="Comment"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/trans_comment"
        android:layout_below="@id/trans_order" />

    <Button
        android:id="@+id/trans_submit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Dispatch Order"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>