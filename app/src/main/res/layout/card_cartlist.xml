<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="133dp"
                android:id="@+id/cart_final_image"
                android:src="@drawable/ic_launcher_background"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_final_name"
                android:text="Product name"
                android:background="#f2f2f2"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_toRightOf="@id/cart_final_image"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_final_prod_name"
                android:text="Product Real Name"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_toRightOf="@id/cart_final_image"
                android:layout_below="@+id/cart_final_name"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_final_nvm"
                android:text="Product NVM"
                android:background="#f2f2f2"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_toRightOf="@id/cart_final_image"
                android:layout_below="@+id/cart_final_prod_name"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cart_final_image"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_below="@id/cart_final_nvm">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="100"
                    android:id="@+id/cart_final_price"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/cart_final_image"
                android:id="@+id/lay2"
                android:layout_below="@id/lay1">

                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Size"
                    android:id="@+id/cart_final_size"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/cart_final_image"
                android:id="@+id/lay3"
                android:layout_below="@id/lay2">

                <TextView
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Unit"
                    android:id="@+id/cart_final_unit"
                    android:textSize="14sp"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="6dp">
            <TextView
                android:id="@+id/cart_final_update"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="UPDATE"
                android:clickable="false"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/cart_final_delete"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="DELETE"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>